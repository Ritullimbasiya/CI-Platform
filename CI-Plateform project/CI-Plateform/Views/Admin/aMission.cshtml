                <h4 style="font-size:16px;">Mission</h4>
                <hr>
                <div class="row">
                    <div class="col mb-3">
                        <button type="button "
                                class="form-control rounded-pill btn btn-outline-warning font sherescontainer11">
                            <a class="adminaddbutton" asp-controller="Admin" asp-action="aMissionadd">
                                <i class="bi bi-plus adminaddbutton" style="width: 12px;"></i>Add
                            </a>
                        </button>
                    </div>
                </div>
                <div class="container fluide">
                    <table id="Mission" class="table table-borderless">
                        <thead class="table-light text-primary">
                            <tr>
                                <th>Mission Title</th>
                                <th>Mission Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var obj in @Model.Missions)
                            {
                                <tr>
                                    <td>@obj.Title</td>
                                    <td>@obj.MissionType</td>
                                    <td>@obj.StartDate</td>
                                    <td>@obj.EndDate</td>
                                    <td class="text-center d-flex">
                                        <a class="btn btn-light" asp-controller="Admin" asp-action="aUseradd">
                                            <i class="bi bi-pencil-square text-secondary"></i>
                                        </a>
                                        <button class="btn btn-light" data-bs-toggle="offcanvas"
                                            data-bs-target="#deleteuser" aria-controls="deleteuser">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }







