@using CI_Plateform.Models
@model DatabaseUserViewModel

<div class="container-fluid" style="padding-left:0px;">
    <div class="row flex-nowrap container-fluid">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color:#f88634;position: sticky;
            top: 0;height: 100vh;">
            <div class=" d-flex flex-column align-items-center align-items-sm-start pt-2 text-white
                min-vh-100">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start pt-4"
                    id="menu" style="font-size:13px;width: 100%;">
                    <h6 class="navigation">NAVIGATION</h6>
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aUser" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-person-fill mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">User</span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">

                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aCMS" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-file-earmark-text-fill mr-3"></i><span class="ms-1 d-none d-sm-inline">CMS Pages</span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aMission" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-bullseye mr-3"></i><span class="ms-1 d-none d-sm-inline">Mission</span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aTheme" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-columns-gap mr-3"></i> <span class="ms-1 d-none d-sm-inline">
                                Mission Theme
                            </span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aSkill" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-tools mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Mission
                                Skills
                            </span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aApplication" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-files mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Mission Application
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aStorylisting" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-bookmark-star"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Story Listing
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aStorydetail" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-book"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Story Detail
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aBanner" class="nav-link active sidebar" role="tab" aria-selected="true"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-card-heading"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Banner Management
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                </ul>
            </div>
        </div>

        <div class="tab-content col py-4 px-5" id="v-pills-tabContent" style="font-size:13px;">
            <div style="display: flow-root;">
                <div style="align-items: center;display: flex;">
                    @Model.dateCreated.ToString("dddd, dd MMMM yyyy , hh:mm:tt")
                </div>
                <div class="dropdown" style="bottom:19px;">
                    <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle"
                       id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" style="float:right;">
                        <img src="@Url.Content(Model.admin.AdminAvatar)" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">@Model.admin.FirstName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-white text-small shadow">
                        @*<li><a class="dropdown-item" asp-controller="MyProfile" asp-action="Myprofile">My Profile</a></li>
                        <li><a class="dropdown-item" asp-controller="Timesheet" asp-action="Timesheet">Volunteering Timesheet</a></li>*@
                        <li><a class="dropdown-item" asp-controller="Login" asp-action="LogOut">Logout</a></li>
                    </ul>
                </div>
            </div>
            <hr style="margin-top: 0px;border-bottom: groove;" />
            <div>
                <span class="border-bottom border-dark border-2 pb-2" style="font-size: 22px;">Banner</span>
                <div class="row">
                    <div class="col mb-3">
                        @*<button type="submit"
                                class="form-control rounded-pill btn btn-outline-warning font sherescontainer11">
                            <i class="bi bi-plus" style="width: 12px;"></i>
                            <a asp-controller="Admin" asp-action="aBanneradd" class="adminaddbutton">
                                Add
                            </a>
                        </button>*@
                        <button class="form-control rounded-pill btn btn-outline-warning font sherescontainer11" type="button" onclick="return location.href=' @Url.Action("aBanneradd","Admin") '">
                            <i class="bi bi-plus" style="width: 12px;"></i> Add
                        </button>
                    </div>
                </div>
                <div class="container fluide">
                    <table id="Skills" class="table table-borderless">
                        <thead class="table-light text-primary">
                            <tr>
                                <th class="col-1">Id</th>
                                <th class="col-7">Title</th>
                                <th class="col-2">Create At</th>
                                <th class="col-2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in @Model.Banners)
                            {
                                <tr>
                                    <td class="col-1">@obj.BannerId</td>
                                    <td class="col-7">@obj.Text</td>
                                    <td class="col-2">@obj.CreatedAt</td>
                                    <td class="d-flex col-2">
                                        <a class="btn btn-light" asp-controller="Admin" asp-action="aBanneredit" asp-route-id="@obj.BannerId">
                                            <i class="bi bi-pencil-square text-secondary"></i>
                                        </a>
                                        <button class="btn btn-light" data-bs-toggle="offcanvas"
                                            data-bs-target="#deletebanner_@obj.BannerId" aria-controls="deletebanner">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @foreach (var obj in @Model.Banners)
            {
                <div class="deleteuser offcanvas offcanvas-start" data-bs-backdrop="static" tabindex="-1" id="deletebanner_@obj.BannerId"
                 aria-labelledby="staticBackdropLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="staticBackdropLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div>
                            <h6>Are you sure you want to delete this item?</h6>
                        </div>
                        <form method="post" action="aSkilldelete">
                            <div class="row" style="margin:18px 0px;display:block;text-align: center;">
                                <button class="form-control rounded-pill btn btn-outline-dark font  sherescontainer10" type="button" onclick="return location.href=' @Url.Action("aBanner","Admin") '">
                                    cancel
                                </button>
                                <button type="submit" asp-controller="Admin" asp-action="aBannerdelete" asp-route-id="@obj.BannerId"
                                    class="form-control rounded-pill btn btn-outline-warning font adminaddbutton" style="width:auto;font-size: 12px;">
                                    Delete
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            <!-- *********************** -->
        </div>
    </div>

</div>
       