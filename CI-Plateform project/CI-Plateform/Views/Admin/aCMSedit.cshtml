@using CI_Plateform.Models
@model UserVm

<div class="container-fluid" style="padding-left:0px;">
    <div class="row flex-nowrap container-fluid">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color:#f88634;position: sticky;
            top: 0;height: 100vh;">
            <div class=" d-flex flex-column align-items-center align-items-sm-start pt-2 text-white
                min-vh-100">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start pt-4"
                    id="menu" style="font-size:13px;width: 100%;">
                    <h6 class="navigation">NAVIGATION</h6>
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aUser" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-person-fill mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">User</span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">

                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aCMS" class="nav-link active sidebar" role="tab" aria-selected="true"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-file-earmark-text-fill mr-3"></i><span class="ms-1 d-none d-sm-inline">CMS Pages</span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aMission" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-bullseye mr-3"></i><span class="ms-1 d-none d-sm-inline">Mission</span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aTheme" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-columns-gap mr-3"></i> <span class="ms-1 d-none d-sm-inline">
                                Mission Theme
                            </span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aSkill" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-tools mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Mission
                                Skills
                            </span>
                        </a>
                    </li>

                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aApplication" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-files mr-3"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Mission Application
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aStorylisting" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-bookmark-star"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Story Listing
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aStorydetail" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-book"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Story Detail
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                    <li class="nav-item" style="width:inherit;">
                        <a asp-controller="Admin" asp-action="aBanner" class="nav-link sidebar" role="tab" aria-selected="false"
                           style="width:100%;text-align: left;">
                            <i class="bi bi-card-heading"></i>
                            <span class="ms-1 d-none d-sm-inline">
                                Banner Management
                            </span>
                        </a>
                    </li>
                    <hr style="margin:2px;width:100%;color: white; ">
                </ul>
            </div>
        </div>

        <div class="tab-content col py-4 px-5" id="v-pills-tabContent" style="font-size:13px;">
            <div style="display: flow-root;">
                <div style="align-items: center;display: flex;">
                    @Model.dateCreated.ToString("dddd, dd MMMM yyyy , hh:mm:tt")
                </div>
                <div class="dropdown" style="bottom:19px;">
                    <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle"
                       id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" style="float:right;">
                        <img src="@Url.Content(Model.admin.AdminAvatar)" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">@Model.admin.FirstName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-white text-small shadow">
                        @*<li><a class="dropdown-item" asp-controller="MyProfile" asp-action="Myprofile">My Profile</a></li>
                        <li><a class="dropdown-item" asp-controller="Timesheet" asp-action="Timesheet">Volunteering Timesheet</a></li>*@
                        <li><a class="dropdown-item" asp-controller="Login" asp-action="LogOut">Logout</a></li>
                    </ul>
                </div>
            </div>
            <hr style="margin-top: 0px;border-bottom: groove;" />
            <span class="border-bottom border-dark border-2 pb-2" style="font-size: 22px;">Edit CMS</span>
            <form class="pt-3" method="post" action="aCMSedit">
                <div>
                    <input asp-for="CmsPage.CmPageId" hidden/>
                    <input asp-for="CmsPage.CreatedAt" hidden/>
                    <div>
                        <label asp-for="CmsPage.Title">Title</label><br>
                        <input asp-for="CmsPage.Title" type="text" id="Title" name="CmsPage.Title" placeholder="Enter story title"
                               class="sherescontainer1">
                        <span asp-validation-for="CmsPage.Title" class="text-danger" style="font-size:12px;"></span>
                           </div>
                    <div class="row" style="margin:18px 0px;padding-left: 0px;">
                        <label asp-for="CmsPage.Description" style="padding:0px;">Description</label><br>
                        <textarea asp-for="CmsPage.Description" name="CmsPage.Description" placeholder="Enter description..." style="color: #757575;width:100%;height:100px;resize:none;border: 1px solid #d9d9d9;"></textarea>
                        <span asp-validation-for="CmsPage.Description" class="text-danger" style="font-size:12px;"></span>
                        @*<div style="width:100%;padding:0px;">
                        <div id="editor4">Enter description.</div>
                        </div>*@
                    </div>
                    <div>
                        <label asp-for="CmsPage.Slug">Slug</label><br>
                        <input asp-for="CmsPage.Slug" type="text" id="slug" name="CmsPage.Slug" placeholder="Enter slug" class="sherescontainer1">
                        <span asp-validation-for="CmsPage.Slug" class="text-danger" style="font-size:12px;"></span>
                    </div>
                    <div style="margin:18px 0px;padding-left: 0px;">
                        <label asp-for="CmsPage.Status" class="ps-0" style="display:block;">Status</label>
                        <select id="cmsStatus" asp-for="CmsPage.Status" aria-label="Default select example">
                            <option class="sherescontainer1" selected>Open this select menu</option>
                            <option class="sherescontainer1" value="0">Not Active</option>
                            <option class="sherescontainer1" value="1">Active</option>
                        </select>
                        <span asp-validation-for="CmsPage.Status" class="text-danger" style="font-size:12px;"></span>
                        @*<label asp-for="CmsPage.Status" class="ps-0">Status</label><br>
                        <input asp-for="CmsPage.Status" type="number" id="number" name="CmsPage.Status" placeholder="Enter 0 or 1" step="1" min="0"
                               max="1" class="sherescontainer1">*@
                    </div>
                </div>
                <div class="row mt-2" style="margin:0px;display:block;float: right;">
                    <button class="form-control rounded-pill btn btn-outline-dark font  sherescontainer10" type="button" onclick="return location.href=' @Url.Action("aCMS","Admin") '">
                        cancel
                    </button>
                    <button type="submit" asp-controller="Admin" asp-action="aCMSedit" class="form-control rounded-pill btn btn-outline-warning font"
                            style="width:auto;font-size: 12px;">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}