        <div class="tab-content col py-4 px-5" id="v-pills-tabContent" style="font-size:13px;">
            <div style="display: flow-root;">
                @*<div style="align-items: center;display: flex;">
                    @Model.dateCreated.ToString("dddd, dd MMMM yyyy , hh:mm:tt")
                </div>*@
                <div class="dropdown" style="bottom:19px;">
                    <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle"
                       id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" style="float:right;">
                        <img src="~/assets/user-img.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">Ritul</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-white text-small shadow">
                        <li><a class="dropdown-item" href="#">My Profile</a></li>
                        <li><a class="dropdown-item" href="#">Volunteering Timesheet</a></li>
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
            <hr style="margin-top: 0px;border-bottom: groove;" />
            <span class="border-bottom border-dark border-2 pb-2" style="font-size: 22px;">Edit User</span>
            <form class="pt-3" method="post" action="aUseredit">
                <div class="row" style="margin:0px;font-size: 10px;">
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="FirstName">Name*</label><br>
                        <input type="text" asp-for="FirstName" id="name" name="FirstName" placeholder="Enter your name"
                               class="sherescontainer1" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="LastName">Surname*</label><br>
                        <input type="text" asp-for="LastName" id="surname" name="LastName" placeholder="Enter your surname"
                               class="sherescontainer1" required>
                    </div>
                </div>
                <div class="row" style="margin:0px;font-size: 10px;">
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="Email">Email*</label><br>
                        <input type="email" asp-for="Email" id="email" name="Email" placeholder="Enter your email"
                               class="sherescontainer1" required>
                    </div>
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="Password">Password*</label><br>
                        <input type="text" asp-for="Password" id="password" name="Password" placeholder="Enter your password"
                               class="sherescontainer1" required>
                    </div>
                </div>
                <div class="row" style="margin:0px;font-size: 10px;">
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="PhoneNumber">Phone number</label><br>
                        <input type="number" asp-for="PhoneNumber" id="phonenumber" name="PhoneNumber"
                               placeholder="Enter your phonenumber" class="sherescontainer1" required>
                    </div>
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="Avatar" style="padding:0px;">Avatar</label><br>
                        <input class="form-control form-control-sm mb-2" asp-for="Avatar" name="Avatar" style="font-size:10px;" id="formFileSm"
                               type="file">
                    </div>
                </div>
                <div class="row mt-2" style="margin:0px;padding-right: 15px; padding-left: 0px;font-size:10px;">
                    <label asp-for="WhyIVolunteer" style="padding:0px;">Why i volunteer??</label><br>
                    <textarea asp-for="WhyIVolunteer" name="WhyIVolunteer" placeholder="Enter description..." style="color: #757575;width:100%;height:100px;resize:none;border: 1px solid #d9d9d9;"></textarea>
                </div>
                <div class="row" style="margin:0px;font-size: 10px;">
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="EmployeeId">Employee id</label><br>
                        <input type="number" asp-for="EmployeeId" id="empid" name="EmployeeId" placeholder="Enter your employee id"
                               class="sherescontainer1" required>
                    </div>
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="Department">Department</label><br>
                        <input type="text" asp-for="Department" id="Department" name="Department" placeholder="Enter your department"
                               class="sherescontainer1" required>
                    </div>
                </div>
                <div class="row mt-2" style="margin:0px;padding-right: 15px; padding-left: 0px;font-size:10px;">
                    <label asp-for="ProfileText" style="padding:0px;">Profile Text</label><br>
                    <textarea asp-for="ProfileText" name="ProfileText" placeholder="Enter text..." style="color: #757575;width:100%;height:100px;resize:none;border: 1px solid #d9d9d9;"></textarea>

                </div>
                <div class="row" style="margin:0px;font-size: 10px;">
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="LinkedInUrl">Linked in URL</label><br>
                        <input type="url" asp-for="LinkedInUrl" id="liu" name="LinkedInUrl" placeholder="Enter your linked in URL"
                               class="sherescontainer1" required>
                    </div>
                    <div class="col-md-6 col-sm-12 mt-2" style="padding:0px 15px 0px 0px;">
                        <label asp-for="Title">Title</label><br>
                        <input type="text" asp-for="Title" id="title" name="Title" placeholder="Enter your title" class="sherescontainer1"
                               required>
                    </div>
                </div>
                <input asp-for="UserId" hidden />
                <input asp-for="CreatedAt" hidden />
                <input asp-for="Status" hidden />
                <input asp-for="City" hidden/>
                <input asp-for="Country" hidden/>

                <div class="row mt-2" style="margin:0px;display:block;float: right;">
                    <button type="button" class="form-control rounded-pill btn btn-outline-dark font  sherescontainer10">
                             <a asp-controller="Admin" asp-action="aUser" class="cancelbutton">
                               cancel
                            </a>
                    </button>
                    <button type="submit" asp-controller="Admin" asp-action="aUseredit" class="form-control rounded-pill btn btn-outline-warning font"
                            style="width:auto;font-size: 12px;">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
