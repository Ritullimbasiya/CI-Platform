@using CI_Plateform.Models;
@model Registration

<script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
        crossorigin="anonymous"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

@if (TempData["Error"] != null)
{
    <script>
        toastr.error('@TempData["Error"]');
    </script>
}
@if (TempData["Done"] != null)
{
    <script>
        toastr.success('@TempData["Done"]');
    </script>
}

<div class="container container-fluid m-0 p-0">
    <div class="row">
        <div class="col-md-8 col-sm-12" style="position: sticky; top: 0;height: 100vh;">
            @{
                var i = 0;
            }
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    @foreach (var item in @Model.banner)
                    {
                        var tempclass = "";
                        @if (i == 0)
                        {
                            tempclass = "active";
                        }
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                            class="@tempclass" aria-current="true" aria-label="Slide @i"
                            style="width: 5px;height: 5px;border-radius: 100%;"></button>
                        i++;
                    }

                </div>
                <div class="carousel-inner">
                    @{
                        i = 0;
                    }
                    @foreach (var item in @Model.banner)
                    {
                        var tempclass = "carousel-item";
                        @if (i == 0)
                        {
                            tempclass = "carousel-item active";
                            i++;
                        }
                        <div class="@tempclass">
                            <img src="@Url.Content(@item.Image)"
                             class="d-block w-100 imgheight" alt="Error">
                            <div class="carousel-caption d-none d-md-block">
                                <h3 class="CorouselTitle">
                                    @item.Title
                                </h3>
                                <p class="CorouselText">
                                    @item.Text
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev" style="display:none;">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next" style="display:none;">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="col-md-4 col-sm-12 wrapper vcenter-item" style="padding: 0px;">
            <div class="box">
                <form method="post">
                    <div class="form-group mb-1 gap">
                        <label class="label font" asp-for="FirstName">First Name</label>
                        <input type="text" class="form-control font" asp-for="FirstName"
                               style="display: inline;box-shadow: none;" placeholder="Ritul">
                        <span asp-validation-for="FirstName" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-group mb-1 gap">
                        <label class="label font" asp-for="LastName">Last Name</label>
                        <input type="text" class="form-control font" asp-for="LastName"
                               style="display: inline;box-shadow: none;" placeholder="Limbasiya">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-1 gap">
                        <label class="label font" asp-for="Email">Email Address</label>
                        <input type="email" class="form-control font" asp-for="Email"
                               style="display: inline;box-shadow: none;" placeholder="ritul@gmail.com">
                        <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-group mb-1 gap">
                        <label class="label font" asp-for="PhoneNumber">Phone Number</label>
                        <input type="number" class="form-control font" asp-for="PhoneNumber"
                               style="display: inline;box-shadow: none;" placeholder="8923454615" >
                        <span  asp-validation-for="PhoneNumber" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-group mb-1 gap">
                        <label class="label font" asp-for="Password">Password</label>
                        <input type="password" class="form-control font" style="display: inline;box-shadow: none; "
                               asp-for="Password" placeholder="********" required="">
                        <span asp-validation-for ="Password" class="text-danger" style="font-size:12px;"></span>
                    </div>

                    <div class="form-group mb-3 gap">
                        <label class="label font" asp-for="Password">Confrim Password</label>
                        <input type="password" class="form-control font" style="display: inline;box-shadow: none; "
                               asp-for="Password" placeholder="********" required="">
                        <span asp-validation-for="Password" class="text-danger" style="font-size:12px;"></span>
                    </div>
                    <button type="submit" class="form-control rounded-pill btn btn-outline-warning font"
                            style="box-shadow:none;">
                        Register
                    </button>
                    <div class="font rppolicy">
                        <a asp-controller="Login" asp-action="PolicyPage" class="hover">Privacy Policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}